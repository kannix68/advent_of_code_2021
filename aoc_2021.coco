def solve_d07pt1(ins):
  """Day 7 pt1 solution."""
  ins = ins.split(",") |> map$(int) |> list
  mn, mx = min(ins), max(ins)
  fc_min = 1e20
  for trg in range(mn, mx+1):
    fc = 0
    for xpos in ins:
      fc += abs(xpos - trg)
    if fc < fc_min:
      log.debug(f"pos={trg}, new min fuelcost={fc}")
      fc_min = fc
  return fc_min

